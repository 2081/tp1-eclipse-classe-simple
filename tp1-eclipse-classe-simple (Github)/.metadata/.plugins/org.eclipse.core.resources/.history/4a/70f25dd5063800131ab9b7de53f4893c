bool Tests::T01(){ // Liste Vide
	ListeDMP ldmp;
	long c = ldmp.Count();
	return c == 0 ? true : false;
}

bool Tests::T02(){ // 3 dmp totalement differentes
	Cartography carto;

	carto.Add(0,0,"H2O");
	carto.Add(2,3,"H1O");
	carto.Add(4,5,"H3O");

	long c = carto.Count();
	return c == 3 ? true : false;
}

bool Tests::T03(){ // 3 dmp differentes, 2 elements identiques
	Cartography carto;

	carto.Add(0,0,"H2O");
	carto.Add(2,3,"H2O");
	carto.Add(4,5,"H3O");

	long c = carto.Count();
	return c == 3 ? true : false;
}

bool Tests::T04(){ // Liste Vide
