bool Tests::T08(){ // Element plusieurs fois pr√©sent
	Cartography carto;

	carto.Add(1,2,"H1O");
	carto.Add(0,0,"H2O");
	carto.Add(2,3,"H1O");
	carto.Add(4,5,"H3O");
	carto.Add(1,4,"H1O");

	long c = carto.Count("H1O");
	return c == 3 ? true : false;
}

bool Tests::T09(){ // Chaine nulle
	Cartography carto;

	carto.Add(1,2,"H1O");
	carto.Add(0,0,"H2O");
	carto.Add(2,3,"H1O");
	carto.Add(4,5,"H3O");
	carto.Add(1,4,"H1O");

	long c = carto.Count("");
	return c == 0 ? true : false;
}

