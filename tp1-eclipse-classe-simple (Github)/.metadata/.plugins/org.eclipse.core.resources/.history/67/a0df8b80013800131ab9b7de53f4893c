#include <iostream>
#include "Cartography.h"
#include "DMP.h"
#include "ListeDMP.h"

using namespace std;

class B3408_tests
{
public :
	B3408_tests();
private :
	bool T01();
	bool T02();
	bool T03();
	bool T04();
	bool T06();
	bool T07();
};

int main() {
	B3408_tests test;
}

bool T01(){ // Liste Vide
	ListeDMP ldmp;
	long c = ldmp.Count();
	return c == 0 ? true : false;
}

bool T02(){ // 3 dmp totalement differentes
	ListeDMP ldmp;
	char str_tab[] = {'H','2','O','\0'};
	char * str = str_tab;
	DMP d1(0,0,str);
	char str2_tab[] = {'H','1','O','\0'};
	char * str2 = str2_tab;
	DMP d2(2,3,str2);
	char str3_tab[] = {'H','3','O','\0'};
	char * str3 = str3_tab;
	DMP d3(4,5,str3);

	ldmp.Add(d1);
	ldmp.Add(d2);
	ldmp.Add(d3);

	long c = ldmp.Count();
	return c == 3 ? true : false;
}

bool T03(){ // 3 dmp differentes, 2 elements identiques
	ListeDMP ldmp;
	char str_tab[] = {'H','2','O','\0'};
	char * str = str_tab;
	DMP d1(0,0,str);
	char str2_tab[] = {'H','2','O','\0'};
	char * str2 = str2_tab;
	DMP d2(2,3,str2);
	char str3_tab[] = {'H','3','O','\0'};
	char * str3 = str3_tab;
	DMP d3(4,5,str3);

	ldmp.Add(d1);
	ldmp.Add(d2);
	ldmp.Add(d3);

	long c = ldmp.Count();
	return c == 3 ? true : false;
}

bool T04(){ // Liste Vide
	ListeDMP ldmp;
	long c = ldmp.Count("H2O");
	return c == 0 ? true : false;
}

