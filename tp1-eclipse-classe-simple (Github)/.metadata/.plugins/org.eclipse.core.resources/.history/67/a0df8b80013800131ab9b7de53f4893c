bool T06(){ // 3 dmp differentes, 2 elements identiques
	ListeDMP ldmp;
	char str_tab[] = {'H','2','O','\0'};
	char * str = str_tab;
	DMP d1(0,0,str);
	char str2_tab[] = {'H','2','O','\0'};
