#include <iostream>
#include "Cartography.h"
#include "DMP.h"
#include "ListeDMP.h"

using namespace std;

int main() {
	cout<<"Test_01"<<endl;
	cout<<(T01()?"OK":"PAS OK")<<endl;
	cout<<"Test_02"<<endl;
	cout<<(T02()?"OK":"PAS OK")<<endl;
}

bool T01(){
	ListeDMP ldmp;
	long c = ldmp.Count();
	return c == 0 ? true : false;
}

bool T02(){
	ListeDMP ldmp;
	char str_tab[] = {'H','2','O','\0'};
	char * str = str_tab;
	DMP d1(0,0,str);
	char str2_tab[] = {'H','1','O','\0'};
	char * str2 = str2_tab;
	DMP d2(2,3,str2);
	char str3_tab[] = {'H','3','O','\0'};
	char * str3 = str3_tab;
	DMP d3(4,5,str3);

	ldmp.Add(d1);
	ldmp.Add(d2);
	ldmp.Add(d3);

	long c = ldmp.Count();
	return c == 3 ? true : false;
}

