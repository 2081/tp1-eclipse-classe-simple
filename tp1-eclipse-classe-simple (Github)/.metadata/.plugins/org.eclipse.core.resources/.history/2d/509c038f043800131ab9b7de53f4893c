	ldmp.Add(d0);
	ldmp.Add(d1);
	ldmp.Add(d2);
	ldmp.Add(d3);
	ldmp.Add(d4);

	long c = ldmp.Count("H1O");
	return c == 3 ? true : false;
}

bool Tests::T09(){ // 3 dmp totalement differentes
	ListeDMP ldmp;
	DMP d0(2,3,"H1O");
	DMP d1(0,0,"H2O");
	DMP d2(2,3,"H1O");
	DMP d3(4,5,"H3O");
	DMP d4(2,3,"H1O");

	ldmp.Add(d0);
	ldmp.Add(d1);
	ldmp.Add(d2);
	ldmp.Add(d3);
	ldmp.Add(d4);

	long c = ldmp.Count("");
	return c == 0 ? true : false;
}

